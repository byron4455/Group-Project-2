<div class="modal" id="loginModal">
            <div class="modal-background"></div>
            <div class="modal-content">
              

              <!-- SIGN IN/REGISTRATION FORM -->
              <div class="sign-up-form">
                <div class="card">
                  <div class="inner-box" id="card">
                    <div class="card-front">
                      <h2>Log in</h2>
                      <form>
                        <input type="email" class="input-box" id="email" placeholder="Your Email" required>
                        <input type="password" class="input-box" id="user_password" placeholder="Password" required>
                        <button type="submit" class="submit-btn" id="login" onclick="lsRememberMe()">Submit</button>
                        <input type="checkbox" value="lsRememberMe" id="rememberMe"><span>Remember Me</span>
                      </form>
                      <button type="button" class="btn" onclick="openRegister()"><span>I am new
                          here</span></button>
                      <a href="">Forgot Password</a>
                    </div>
                    <div class="card-back">
                      <h2>Register</h2>
                      <form>
                        <input type="text" class="input-box" id="inputFirst" placeholder="Your First Name" required>
                        <input type="text" class="input-box" id="inputLast" placeholder="Your Last Name" required>
                        <input type="email" class="input-box" id="inputEmail" placeholder="Your Email ID" required>
                        <input type="password" class="input-box" id="inputPassword" placeholder="Password" required>
                        <button type="submit" class="submit-btn" id="add-user" >Submit</button>
                        <!-- <input type="checkbox"><span>Remember Me</span> -->
                      </form>
                      <button type="button" class="btn" onclick="openLogin()">I have an account</button>
                      <!-- <a href="">Forgot Password</a> -->
                    </div>
                  </div>
                </div>
              </div>

              <!-- END FORM -->
            </div>
            <button class="modal-close is-large" aria-label="close"></button>
          </div>
          <!-- END MODAL -->
          